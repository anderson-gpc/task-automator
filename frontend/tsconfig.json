{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/src/*": [
        "./src/*"
      ],
      "@/actions/*": ["./src/actions/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/components/*": ["./src/components/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/interfaces/*": ["./src/interfaces/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/views/*": ["./src/views/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/types/dev/types/**/*.ts",
    "**/*.mts",
    ".next/dev/types/**/*.ts"
, "src/app/(routes)/(public)/login/layout.tsx", "./proxy.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
