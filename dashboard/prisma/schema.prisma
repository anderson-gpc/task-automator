generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  login String @unique
  githubId Int @unique
  repository Repository[]
  refinedAcessToken String?
}

model Repository {
  id Int @id @default(autoincrement())
  html_url String
  name String
  userId Int?
  user User? @relation(fields: [userId], references: [githubId], onDelete: Cascade, onUpdate:Cascade)
}
